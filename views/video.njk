{% extends "layout.njk" %}

    {% block head %}
        <title>{{item.titlle}} - Lucas Baron</title>
    {% endblock %}

{% block content %}
    <div class="title video">
    <h1>{{item.title}}</h1>
    </div>

        <article class="video">

                <div class="card" id="{{item.id}}">
                    <div class="card-video-container">
                        <iframe src="https://www.youtube.com/embed/{{item.id}}" frameborder="0"></iframe>
                       
                    </div>

                    <div class="card-content">
                        <p>{{item.title}}</p>
                    </div>

                    <div class="car-info">
                        <p>{{item.duration}}</p>
                        <p class="card_price">{{item.price}}</p>
                    </div>

                </div>

            

        </article>  
        

{% endblock %}