{% extends "layout.njk" %}

    {% block head %}
        <title>Portifolio - Lucas Baron</title>
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    {% endblock %}

{% block content %}
    <div class="title">
    <h1>Aulas</h1>
    </div>

        <article class="cards">

            {% for item in items %}
                <div class="card" id="{{item.id}}">
                    <div class="card-image-container {{ 'featured-wrapper' if item.featured }}">
                        <img 
                            src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem de {{item.title}}">

                            {% if item.featured %}
                                <div class="featured">
                                    Featured
                                </div>
                            {% endif %}
                    </div>

                    <div class="card-content">
                        <p>{{item.title}}</p>
                    </div>

                    <div class="car-info">
                        <p>{{item.duration}}</p>
                        <p class="card_price">{{item.price}}</p>
                    </div>

                </div>
            {% endfor %}

            

        </article>        
        
{% endblock %}